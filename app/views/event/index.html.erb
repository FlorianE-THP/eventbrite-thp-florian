 <html>
  <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
  <body>
    <main role="main">
      <!-- Main jumbotron for a primary marketing message or call to action -->
      <div class="jumbotron">
        <div class="image">
          <div class="container">
            <h1 class="display-3">Eventbrite</h1>
            <p>Découvre les sorties à faire entre amis, en famille, ou en couple.</p>
            <p><a <%= link_to "Créer un évènement", new_event_path, :class =>"btn btn-outline-dark" %></a></p>
            </div>
          </div>
        </div>
        <h2 style="text-align :center">Meilleurs évènements</h2>
        <br>
        <hr class="solid">
        <br>
        <br>
        <br>
        <br>
        <br>
      </div>
      <div class="container">
        <div class="row">
          <% @event.each do |e|%>
            <% if e.avatar.attached? %>
              <div class="col-lg-4 col-sm-6 portfolio-item">
                <div class="card h-100">
                  <%= image_tag e.avatar, alt: 'avatar', class: "card-img-top"%>
                  <div class="card-body", style="text-align :center">
                    <h4 class="card-title">
                      <h3><%=e.title%></h3>
                    </h4>
                    <p><%=e.description%> </p>
                    <%= link_to "Lien vers l'évènement", event_path(e.id), :class => "btn btn-outline-primary"%>
                  </div>
                </div>
              </div>
            <% end %>
          <% end %>
        </div>
      </div>
      <br>
      <br>
      <br>
    </div>
  </div>
  <hr>
</div>
<!-- /container -->
</main>
